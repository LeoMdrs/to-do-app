

    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3>Adicionar nota</h3>
            </div>
            <div class="card-body">
                <form action="/notas/salvar/{{nota._id}}?_method=PUT" method="POST">
                    
                    {{!-- Middleware methodOverride - Form vai ser enviado pelo methodo put --}}
                    <input type="hidden" name="_method" value="PUT">
                    
                    <div class="form-group">
                        <input value="{{nota.titulo}}" type="text" name="titulo" placeholder="Titulo" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <textarea name="descricao" placeholder="Descrição" class="form-control">{{nota.descricao}}</textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>