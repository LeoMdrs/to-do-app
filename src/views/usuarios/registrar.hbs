
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header">
                    Nova conta
                </div>
                <div class="card-body">
                    <form action="/usuarios/salvar-registro" method="POST">
                        <div class="form-group">
                            <input value="{{nome}}" type="text" name="nome" placeholder="Nome" class="form-control">
                        </div>
                        <div class="form-group">
                            <input value="{{email}}" type="email" name="email" placeholder="Email" class="form-control">
                        </div>
                        <div class="form-group">
                            <input value="{{senha}}" type="password" name="senha" placeholder="Senha" class="form-control">
                        </div>
                        <div class="form-group">
                            <input value="{{senha2}}" type="password" name="senha2" placeholder="Confirme senha" class="form-control">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">
                                Registrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
